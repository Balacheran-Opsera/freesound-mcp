{% import './molecules/navbar.njk' as navbars %}
{% extends "base.njk" %}

{% block content %}
  {{ navbars.browseNavbar(true) }}
  <div class="container">
    <div class="row navbar-space-filler v-spacing-top-6 v-spacing-6 bw-profile__hero bw-edit-profile">
      <aside class="col-3 offset-1">
        {{ navbars.editProfileNavbar('account') }}
      </aside>
      <div class="col-7 offset-1 bw-edit-profile__info">
        <h1>Close account</h1>
        <div class="v-spacing-top-7 w-100">
          <p class="font-weight-bold text-center v-spacing-2">Warning: You can not be “undeleted”, not even by administrators.</p>
          <p class="v-spacing-4 text-center">If you’re just looking to delete one or more of your sounds, <a href="">you can do it here</a>.</p>
          <form class="bw-edit-profile__form w-100 v-spacing-top-6">
            <label for="onlyAccount" class="between radioAccount">
              <div class="bw-profile__radio">
                <input id="onlyAccount" type="radio" class="bw-radio" name="deleteAccount" value="onlyAccount" />
                <span class="bw-edit-profile-name h-spacing-left-2">Delete only my user account information</span>
              </div>
            </label>
            <label for="fullAccount" class="between radioAccount">
              <div class="bw-profile__radio">
                <input id="fullAccount" type="radio" class="bw-radio" name="deleteAccount" value="fullAccount" />
                <span class="bw-edit-profile-name h-spacing-left-2">Delete my user account information, my sounds and my packs</span>
              </div>
            </label>
            <button class="btn-primary w-100 v-spacing-top-5">Close account</button>
          </form>
        </div>
      </div>
    </div>
  </div>
{% include './molecules/footer.njk' %}
{% endblock %}